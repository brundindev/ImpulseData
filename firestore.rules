rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regla b치sica: no permitir acceso a menos que se especifique lo contrario
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Reglas para la colecci칩n empresas y sus subcolecciones
    match /empresas/{empresaId} {
      // Solo permitir lectura y escritura si el usuario est치 autenticado y es el creador
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && resource.data.creadoPor == request.auth.uid;
      
      // Reglas para las subcolecciones de empresas
      match /departamentos/{departamentoId} {
        allow read, write: if request.auth != null && 
                            get(/databases/$(database)/documents/empresas/$(empresaId)).data.creadoPor == request.auth.uid;
      }
      
      match /centros/{centroId} {
        allow read, write: if request.auth != null && 
                            get(/databases/$(database)/documents/empresas/$(empresaId)).data.creadoPor == request.auth.uid;
      }
      
      match /formaciones/{formacionId} {
        allow read, write: if request.auth != null && 
                            get(/databases/$(database)/documents/empresas/$(empresaId)).data.creadoPor == request.auth.uid;
      }
    }
    
    // Reglas para la colecci칩n usuarios (si la necesitas en el futuro)
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
} 