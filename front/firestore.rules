rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir lectura si el usuario está autenticado
    match /usuarios/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
      allow write: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
    }
    
    // Permitir acceso a empresas solo si el usuario está autenticado y es el creador
    match /empresas/{empresaId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (resource == null || resource.data.creadoPor == request.auth.uid);
      
      // Permitir acceso a las subcolecciones de empresas
      match /{collection}/{docId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && get(/databases/$(database)/documents/empresas/$(empresaId)).data.creadoPor == request.auth.uid;
      }
    }
    
    // Permitir lectura de configuraciones públicas
    match /configs/{configId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
} 